<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="com.orona.security.server.service"
	status="error">

	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %5p %c{1.} [%t] %m%n" />
		</Console>
	</Appenders>

	<Loggers>
        
        <logger level="debug"
			name="es.indaba"
			additivity="false">
			<AppenderRef ref="STDOUT" />
		</logger>
        
        <Root level="info">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>

</Configuration>